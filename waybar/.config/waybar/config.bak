{
    "layer": "top",
    "height": 32,
    "spacing": 10,
    "margin-top": 5,
    "margin-bottom": 0,
    "margin-left": 10,
    "margin-right": 10,

    "modules-left": [
        "group/workspaces-window"
    ],
    "modules-center": [
        "group/datetime" 
    ],
    "modules-right": [
        "group/system-stats",
        "group/utilities"
    ],

    // Custom bracket and separator elements
    "custom/left-bracket": {
        "format": "[",
        "tooltip": false
    },
    "custom/right-bracket": {
        "format": "]",
        "tooltip": false
    },
    "custom/separator": {
        "format": "|",
        "tooltip": false
    },

    // Left bar: Workspaces + Active Window
    "group/workspaces-window": {
        "orientation": "horizontal",
        "modules": [
            "custom/left-bracket",
            "sway/workspaces",
            "custom/right-bracket",
            "custom/left-bracket", 
            "sway/window",
            "custom/right-bracket"
        ]
    },
    "sway/workspaces": {
        "disable-scroll": true,
        "all-outputs": true,
        "format": "{name}",
        "tooltip": false
    },
    "sway/window": {
        "format": "{title}",
        "max-length": 30,
        "tooltip": false
    },

    // Center bar: Date and Time
    "group/datetime": {
        "orientation": "horizontal", 
        "modules": [
            "custom/left-bracket",
            "clock#date",
            "custom/separator",
            "clock#time", 
            "custom/right-bracket"
        ]
    },
    "clock#date": {
        "format": "{:%a, %b %d}",
        "tooltip": false
    },
    "clock#time": {
        "format": "{:%I:%M %p}",
        "tooltip": false
    },

    // Right bar: System Stats
    "group/system-stats": {
        "orientation": "horizontal",
        "modules": [
            "custom/left-bracket",
            "cpu",
            "custom/separator", 
            "memory",
            "custom/separator",
            "custom/network",
            "custom/right-bracket"
        ]
    },
    "cpu": {
        "format": " CPU:{usage}%",
        "interval": 2,
        "tooltip": false
    },
    "memory": {
        "format": " RAM:{percentage}%", 
        "interval": 2,
        "tooltip": false
    },
    "custom/network": {
        "format": " {}",
        "exec": "echo 'ethernet'",
        "on-click": "~/.config/waybar/scripts/network_toggle.sh",
        "interval": "once",
        "tooltip": true,
        "tooltip-format": "Click to toggle IP display"
    },

    // Right bar: Utilities
    "group/utilities": {
        "orientation": "horizontal",
        "modules": [
            "custom/left-bracket",
            "custom/clipboard",
            "custom/separator",
            "custom/bluetooth", 
            "custom/separator",
            "custom/notification",
            "custom/separator",
            "custom/power",
            "custom/right-bracket"
        ]
    },
    "custom/clipboard": {
        "format": "clip",
        "exec": "echo 'clip'",
        "interval": "once",
        "tooltip": false,
        "on-click": "cliphist list | wofi --dmenu | cliphist decode | wl-copy"
    },
    "custom/bluetooth": {
        "format": "bt",
        "exec": "echo 'bt'", 
        "interval": "once",
        "tooltip": false,
        "on-click": "blueman-manager"
    },
    "custom/notification": {
        "format": "notify",
        "exec": "echo 'notify'",
        "interval": "once", 
        "tooltip": false,
        "on-click": "swaync-client -t -sw"
    },
    "custom/power": {
        "format": "‚èª",
        "tooltip": false,
        "on-click": "~/.config/waybar/scripts/power_menu.sh"
    }
}
/* Base styling */
* {
    border: none;
    border-radius: 0;
    min-height: 0;
    font-family: "JetBrains Mono", monospace;
    font-weight: bold;
    font-size: 14px;
    margin: 0;
    padding: 0;
}

/* Main waybar window */
window#waybar {
    background: transparent;
    color: #f8f8f2;
}

/* Three main bar sections with your requested background */
.modules-left,
.modules-center, 
.modules-right {
    background-color: #282A36;
    border-radius: 6px;
    margin: 0;
    padding: 2px 8px;
}

/* Bracket and separator styling */
#custom-left-bracket,
#custom-right-bracket,
#custom-separator {
    color: #6272a4;
    background: transparent;
    padding: 0 4px;
}

/* Left bar: Workspaces */
#workspaces {
    background: transparent;
    padding: 0;
}

#workspaces button {
    all: initial;
    min-width: 20px;
    padding: 2px 6px;
    margin: 0 2px;
    background: transparent;
    color: #6272a4;
    border-radius: 4px;
}

#workspaces button:hover {
    background-color: #44475a;
    color: #f8f8f2;
}

#workspaces button.focused {
    background: transparent;
    color: #50fa7b;
    font-weight: bold;
}

#workspaces button.urgent {
    background-color: #ff5555;
    color: #f8f8f2;
}

/* Left bar: Active Window */
#window {
    background: transparent;
    color: #f8f8f2;
    padding: 0 6px;
    font-style: italic;
}

/* Center bar: Date and Time */
#clock {
    background: transparent;
    color: #f8f8f2;
    padding: 0 4px;
}

/* Right bar: System Stats */
#cpu {
    background: transparent;
    color: #50fa7b;
    padding: 0 4px;
}

#memory {
    background: transparent;
    color: #ff79c6;
    padding: 0 4px;
}

#network {
    background: transparent;
    color: #8be9fd;
    padding: 0 4px;
}

/* Right bar: Utilities */
#custom-clipboard,
#custom-bluetooth,
#custom-notification,
#custom-power {
    background: transparent;
    color: #f8f8f2;
    padding: 0 4px;
}

#custom-clipboard:hover,
#custom-bluetooth:hover,
#custom-notification:hover,
#custom-power:hover {
    color: #50fa7b;
}

/* Critical states */
#cpu.critical {
    color: #ff5555;
    background-color: #44475a;
}

#memory.critical {
    color: #ff5555;
    background-color: #44475a;
}